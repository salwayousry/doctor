<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doctorapp">

    <!-- Permissions for Camera and Storage -->
    <!-- Access to the device's camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Access external storage for devices below Android 13 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Access images for devices running Android 13 and above -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:requestLegacyExternalStorage="true"
        android:label="doctorapp"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Main activity definition -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Define the default theme for Flutter's launch -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Intent filters -->
            <!-- Allow the app to handle camera actions -->
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />
                <!-- Specify the main entry point for the app -->
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Required meta-data for Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>
